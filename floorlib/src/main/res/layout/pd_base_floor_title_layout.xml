<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/pd_base_floor_padding"
    android:paddingRight="@dimen/pd_base_floor_padding"
    android:paddingBottom="@dimen/pd_base_floor_padding">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/pd_base_floor_bg_title_tag"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="?attr/isv_color_C1"
        android:textSize="?attr/isv_font_size_T10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="?attr/isv_color_C7"
        android:textSize="?attr/isv_font_size_T5"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>